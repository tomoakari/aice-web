<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>AICE meeting</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
</head>
<body>
  <div id="app">
    <h1 id="title">AICE CLOUDミーティング</h1>
    <div id="join" v-show="!roomId">
      <div style="width:25%">
        <h2>ルームの選択</h2>
        <div>
          <input v-model="name" placeholder="ユーザ名を入力してください" required />
        </div>
        <div>
          <button @click="joinRoom('room_1')" class="btn">Room 1</button>
          <button @click="joinRoom('room_2')" class="btn">Room 2</button>
        </div>
      </div>
    </div>
    <div id="container"v-show="roomId">
      <div id="main">
        <div id="video" ref="video">
        </div>
        <div id="menu">
        <div style="display: flex;">
            <div class="menu_item">
                <div>
                    <i class="fa fa-2x fa-microphone" @click="stopAudio" v-show="!onMute"></i>
                    <i class="fa fa-2x fa-microphone-slash" @click="startAudio" v-show="onMute"></i>
                </div>
                <div>
                    <span v-if="!onMute">ミュート</span>
                    <span v-else>アンミュート</span>
                </div>
            </div>
            <div class="menu_item">
                <div>
                    <i class="fa fa-2x fa-video" @click="stopVideo" v-show="onVideo"></i>
                    <i class="fa fa-2x fa-video-slash" @click="startVideo" v-show="!onVideo"></i>
                </div>
                <div>
                    <span v-if="onVideo">ビデオの停止</span>
                    <span v-else>ビデオの開始</span>
                </div>
            </div>
        </div>
        </div>
      </div>
      <div id="sub">
        <div id="paticipate">
            <p class="sub_list">参加者</p>
              <div class="message_wrap">
                <p v-for="(member,index) in members" :key="index">{{ member.name }}</p>
              </div>
          </div>
        <div id="chat">
          <p class="sub_list">チャット</p>
          <div class="message_wrap">
            <p v-for="(message,index) in messages" :key="index">{{ message }}</p>
          </div>
            <div>
              <div>
                <textarea
                  class="text_area"
                  placeholder="メッセージを入力します"
                  v-model="message"
                  ></textarea>
              </div>
              <div>
                <button class="btn" @click="sendMessage">メッセージ送信</button>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://unpkg.com/vue@next" defer></script>
  <script src="/socket.io/socket.io.js" defer></script>
  <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
  <script src="/app.js" defer></script>

</body>
</html>